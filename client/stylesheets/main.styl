@import 'nib'


$bg-color = #FAFAFA;
$primary-color = #00BCD4;
$accent-color = #FFEB3B;
$base-height = 32px;

//helpers
.no-padding
	padding 0
	margin 0
	
.paper-shadow-z1
	box-shadow 0 1px 6px rgba(0,0,0,0.12), 0 1px 4px rgba(0,0,0,0.12)!important
	
.paper-shadow-z2
	box-shadow 0 3px 10px rgba(0,0,0,0.16), 0 3px 10px rgba(0,0,0,0.23)!important
	
.paper-shadow-z3
	box-shadow 0 10px 30px rgba(0,0,0,0.19), 0 6px 10px rgba(0,0,0,0.23)!important
	
.paper-shadow-z4
	box-shadow 0 14px 45px rgba(0,0,0,0.25), 0 10px 18px rgba(0,0,0,0.22)!important
	
.paper-shadow-z5
	box-shadow 0 19px 60px rgba(0,0,0,0.3), 0 15px 20px rgba(0,0,0,0.22)!important
	
.divider
	height 1px
	width 100%
	border-top 1px solid #E0E0E0

body
	background $bg-color
	font-smoothing antialiased
	overflow-scrolling touch

a, a:hover, a:active, a:focus
	outline none
	text-decoration none

.container-fluid
	background $bg-color
	padding 0

.wrap
	width 100%
	min-height calc(100vh - 66px)
	height auto

.header
	width 100%
	min-height $base-height * 4
	height auto
	background-color $primary-color
	color #FFF
	
.footer
	width 100%
	min-height $base-height * 2
	height auto
	background-color $primary-color
	color #FFF
	@media screen and (max-width: 992px)
		min-height $base-height * 4
	@media screen and (max-width: 600px)
		min-height $base-height * 5
	
.header__title
	text-align center
	font-size 1.3em 
	padding 20px 0
	
.main-menu__item
	width 25%
	padding 20px
	margin 0!important
	cursor pointer
	text-transform uppercase
	font-weight 700
	border-top solid 1px #FFF
	border-left solid 1px #FFF
	text-align center
	user-select none
	&:first-child
		border-left none
	@media screen and (max-width: 600px)
		padding 10px
		width 50%
		&:nth-child(3)
			border-left none
			
.main-menu__item--active
	background-color #80DEEA
	
.footer__title
	text-align center
	font-size 1.3em 
	padding 20px 0
	
.btn-help
	position absolute
	top 10px
	right 10px
	width 100px
	text-align center
	padding 10px 20px
	border solid 1px #FFF
	cursor pointer
	@media screen and (max-width: 992px)
		position relative
		margin 0 auto
		
.btn-menu
	position absolute
	padding 15px
	cursor pointer
	
.btn-menu__icon
	color #FFF

.main-form
	width 100%
	max-width 500px
	margin 20px
	padding 20px
	background-color #FFF
	@extend .paper-shadow-z1
	
.form-container
	width 100%
	min-height 70vh
	height auto
	display flex
	flex-direction row
	flex-wrap nowrap
	justify-content center
	align-items center
		
.btn-send
	width 100%
	text-align center
	padding 10px
	background-color #FFEB3B
	text-transform uppercase
	transition all 0.2s ease-in-out
	cursor pointer
	user-select none
	@extend .paper-shadow-z1
		
		
.img-item
	width 100%
	max-width 250px
	margin 20px auto
	
.card
	padding 20px
	margin 20px
	@extend .paper-shadow-z1
	
.text-content
	margin 40px
	
.my-modal-dialog
	margin-top 200px
	
.my-modal-body
	border none!important
	
.my-modal-header
	border none!important
	
.my-modal-footer
	border none!important
	
.my-super-menu
	position fixed
	top 0px
	left -180px
	width 180px
	height 100%
	background  #FFF
	transition all 0.5s ease-out
	overflow auto
	overflow-x hidden
	z-index 100
	
.content-menu
	width 100%
	height 100%
	padding 0
	margin 0
	
.content-menu__list
	width 100%
	list-style-type none
	margin 0
	padding 0
	text-align left
	font-weight 400
	height 100%
	
.list__item
	padding 30px 10px 30px 20px
	width 100%
	cursor pointer
	
.menu-overlay
	position fixed
	top 0
	bottom 0
	left 0
	right 0
	width 100%
	height 100%
	background #000
	opacity 0.7
	z-index 99
	display none
	
.list__item--active
	background-color #80DEEA
	
.form-group .ng-invalid
	background-color #FCE4EC
	
.form-group .ng-pristine
	background-color #FFF



	
	
	
	
	
	
	
	